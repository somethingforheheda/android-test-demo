<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FrameTaskSplitter 对比演示"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 任务配置区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务配置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 任务类型选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务类型:"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerTaskType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- 任务复杂度 -->
                <TextView
                    android:id="@+id/tvComplexity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务复杂度: 5"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarComplexity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:min="1"
                    android:progress="5"
                    android:layout_marginBottom="16dp" />

                <!-- 生成任务按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnGenerate1000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="生成1000个任务"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnGenerate5000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="生成5000个任务"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 状态信息 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请先生成任务，然后开始对比测试"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp" />

        <!-- 开始对比按钮 -->
        <Button
            android:id="@+id/btnStartComparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始对比测试"
            android:textSize="16sp"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <!-- 对比执行区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 直接执行 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直接执行"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressBarDirect"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProgressDirect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 0 (0%)"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDirectExecutionResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待开始..."
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 分帧执行 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分帧执行"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressBarFrame"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProgressFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 0 (0%)"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvFrameExecutionResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待开始..."
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 分帧执行控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分帧控制："
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:enabled="false"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复"
                android:enabled="false"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:enabled="false" />
        </LinearLayout>

        <!-- 原有的隐藏进度条和文本（保留以兼容代码） -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- 性能对比区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时性能对比"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 两种方式的对比 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- 直接执行指标 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@drawable/rounded_background"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="直接执行"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDirectFrameTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 平均帧时间: --ms"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvDirectDropRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 掉帧率: --%"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvDirectStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 状态: 等待"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- 分帧执行指标 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@drawable/rounded_background"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分帧执行"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvFrameTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 当前帧时间: --ms"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTasksPerFrame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 每帧任务数: --"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFrameDropRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• 掉帧率: --%"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 已用时间对比 -->
                <TextView
                    android:id="@+id/tvElapsedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行时间对比: --"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp" />

                <!-- 帧时间历史对比 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帧时间历史对比"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDirectFrameHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="直接执行: --"
                        android:padding="8dp"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_background"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvFrameHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="分帧执行: --"
                        android:padding="8dp"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_background" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>